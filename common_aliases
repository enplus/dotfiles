function hoog {
    search=$1
    count=$2
    if [ -z $count ] ; then
        hoogle -q --color "$search" | grep -v -e "^Searching for:" | awk 'BEGIN { a = 1 } { print a ") " $(NF-NF) ; a = a + 1 }' 
    else    
        hoogle -q --color -i --count=$count "$search"
    fi
}

